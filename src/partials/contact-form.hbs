      <!-- Contact Form -->
      <div class="contact-form-container">
        <form id="contactForm" method="POST" class="contact-form">
          <fieldset>
            <div class="form-group">
              <label for="Name">
                <span data-i18n="contactPage.form.name">Name</span>
              </label>
              <input type="text" name="Name" id="Name" data-i18n="contactPage.form.namePlaceholder" required>
            </div>

            <div class="form-group">
              <label for="Email">
                <span data-i18n="contactPage.form.email">Email</span>
              </label>
              <input type="email" name="Email" id="Email" data-i18n="contactPage.form.emailPlaceholder" required>
            </div>

            <div class="form-group">
              <label for="Topic">
                <span data-i18n="contactPage.form.topic">Topic</span>
              </label>
              <select name="Topic" id="Topic" required>
                <option value="" data-i18n="contactPage.form.topicPlaceholder">Select a topic</option>
                <option value="General Inquiry" data-i18n="contactPage.form.topicGeneral">General Inquiry</option>
                <option value="Technical Question" data-i18n="contactPage.form.topicTechnical">Technical Question</option>
                <option value="Collaboration" data-i18n="contactPage.form.topicCollaboration">Collaboration</option>
              </select>
            </div>

            <div class="form-group">
              <label for="Message">
                <span data-i18n="contactPage.form.message">Message</span>
              </label>
              <textarea rows="5" name="Message" id="Message" data-i18n="contactPage.form.messagePlaceholder" required></textarea>
            </div>

            <!-- Hidden language field -->
            <input type="hidden" name="Lang" id="Lang" value="en">
          </fieldset>

          <!-- Honeypot field for bot protection -->
          <div class="form-website" aria-hidden="true">
            <label for="contact_website">Website</label>
            <input type="text" name="website" id="contact_website" tabindex="-1" autocomplete="off">
          </div>

          <button class="btn-form" id="contactSubmit" type="submit">
            <span class="btn-text" data-i18n="contactPage.form.submit">Send Message</span>
          </button>
        </form>
